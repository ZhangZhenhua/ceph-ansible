# Ceph configuration file override.
# This allows you to specify more configuration options
# using an INI style format.
# The following sections are supported: [global], [mon], [osd], [mds], [rgw]
#
# Example:
ceph_conf_overrides:
  global:
    osd_pool_default_size: 3
    osd_pool_default_min_size: 2
    osd_pool_default_pg_num: 64
    osd_pool_default_pgp_num: 64
    max_open_files: 131072
    ms_crc_data: false
    ms_crc_header: true
    rados_mon_op_timeout: 43200
    rados_osd_op_timeout: 43200
  osd:
    osd_journal_size: 20480
    filestore_xattr_use_omap: true
    filestore_min_sync_interval: 10
    filestore_max_sync_interval: 15
    filestore_queue_max_ops: 25000
    filestore_queue_max_bytes: 1048576000
    filestore_queue_committing_max_ops: 5000
    filestore_queue_committing_max_bytes: 10485760000
    filestore_op_threads: 20
    journal_max_write_bytes: 1073714824
    journal_max_write_entries: 10000
    journal_queue_max_ops: 50000
    journal_queue_max_bytes: 10485760000
    osd_max_write_size: 512
    osd_client_message_size_cap: 536870912
    osd_client_message_cap: 2048
    osd_deep_scrub_stride: 131072
    osd_op_threads: 20
    osd_disk_threads: 4
    osd_op_num_shards: 10
    osd_op_num_threads_per_shard: 3
    osd_map_cache_size: 1024
    osd_map_cache_bl_size: 128
    osd_recovery_threads: 1
    osd_recovery_op_priority: 4
    osd_recovery_max_active: 4
    osd_max_push_objects: 4
    osd_recovery_max_single_start: 4
    osd_max_backfills: 4
    osd_backfill_scan_min: 4
    osd_backfill_scan_max: 16
    osd_max_scrubs: 1
    osd_scrub_sleep: 0.1
    osd_recovery_sleep: 0.1
    osd_heartbeat_grace: 180
    objecter_inflight_ops: 1024
    objecter_inflight_op_bytes: 104857600
    filestore_merge_threshold: 40
    filestore_split_multiple: 8
    filestore_omap_header_cache_size: 102400
    filestore_expected_throughput_ops: 600
    filestore_caller_concurrency: 20
    osd_op_thread_suicide_timeout: 900
  client:
    rbd_cache: true
    rbd_cache_size: 268435456
    rbd_cache_max_dirty: 134217728
    rbd_cache_max_dirty_age: 5
    rbd_cache_writethrough_until_flush: true
  mon:
    mon_pg_warn_max_per_osd: 0
    mon_osd_nearfull_ratio: 0.7
  mds:
    mds_bal_frag: true
    mds_bal_sample_interval: 100
    mds_bal_fragment_size_max: 1000000
    mds_bal_fragment_interval: 1
    mds_cache_size: 1000000
    mds_dir_max_commit_size: 100
    mds_dirstat_min_interval: 100
    mds_log_max_expiring: 200
    mds_beacon_grace: 600
    mds_max_purge_files: 128
    mds_max_purge_ops: 4096
    mds_max_purge_ops_per_pg: 2
    mds_standby_for_rank: 0
    mds_standby_replay: true
#     foo: 1234
#     bar: 5678
#
#ceph_conf_overrides: {}


